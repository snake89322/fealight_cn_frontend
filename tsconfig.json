{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["*", "src/*"]
    },
    "outDir": "ts-out",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "js": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
  },
  "include": [
    "./declaration.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "config",
    "webpack",
    "jest",
    "scm",
    "dist"
  ],
}